@model MusicWeb.Models.Domain.Songs

@{
    ViewData["Title"] = "Delete";
}
<header>
    <style>
        .title {
            display: flex;
            justify-content: center;
        }

        body {
        }

        img {
            width: 100%;
        }
    </style>
</header>
<h1 class="title">XÓA BÀI HÁT</h1>

<h3 class="title">THÔNG TIN BÀI HÁT</h3>
<div class="title">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tiêu đề bài hát
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Tên bài hát
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SongName)
        </dd>
        <dt class = "col-sm-2">
            Số lượt nghe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
        <dt class = "col-sm-2">
            Đường dẫn file nhạc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LinkLocal)
        </dd>
        <dt class = "col-sm-2">
            Đường dẫn file ảnh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LinkImg)
        </dd>
        <dt class = "col-sm-2">
            Lời bài hát
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lyric)
        </dd>
    </dl>
    <div class="title">
        <form asp-action="Delete">
            <input type="hidden" asp-for="SongId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Trang chủ</a>
        </form>
    </div>
</div>
